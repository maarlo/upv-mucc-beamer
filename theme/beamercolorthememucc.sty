%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Base colors
\definecolor{mucc-pink}{RGB}{209,0,93}
\definecolor{mucc-red}{RGB}{255,0,0}
\definecolor{mucc-black}{RGB}{0,0,0}
\definecolor{mucc-white}{RGB}{255,255,255}
\definecolor{mucc-gray}{RGB}{128,128,128}
\definecolor{mucc-green}{RGB}{141,138,0}

\colorlet{mucc-alert}{mucc-red}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Beamer colors
\setbeamercolor{structure}                 {fg = mucc-pink}%
\setbeamercolor{author}                    {fg = mucc-gray}%
\setbeamercolor{title}                     {fg = mucc-pink}%
\setbeamercolor{date}                      {fg = mucc-gray}%
\setbeamercolor{sectiontitle}              {fg = mucc-pink}%
\setbeamercolor{navigation symbols}        {bg = mucc-black!20!mucc-white, fg = mucc-black}%
\setbeamercolor{normal text}               {fg = mucc-black}%
\setbeamercolor{frametitle}                {fg = mucc-pink}%
\setbeamercolor{footer}                    {fg = mucc-black}%
\setbeamercolor{frame number in foot}      {fg = mucc-pink}%
\setbeamercolor{frame number in head/foot} {fg = mucc-pink}
\setbeamercolor{itemize item}              {fg = mucc-pink}
\setbeamercolor{itemize subitem}           {parent = itemize item}
\setbeamercolor{itemize subsubitem}        {parent = itemize subitem}

\setbeamercolor{block title}               {fg = mucc-white,bg = mucc-pink}
\setbeamercolor{block body}                {fg = mucc-black,bg = mucc-pink!15}

\setbeamercolor{alerted text}              {fg = mucc-alert}
\setbeamercolor{block title alerted}       {fg = mucc-white,bg = mucc-alert}
\setbeamercolor{block body alerted}        {fg = mucc-black,bg = mucc-alert!20!mucc-white}
